<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
    android:id="@+id/textView4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/cairo_semibold"
    android:gravity="center"
    android:text="@string/case_details"
    android:textColor="@color/black"
    android:textSize="@dimen/_14ssp"
    app:layout_constraintBottom_toBottomOf="@+id/btn_back"
    app:layout_constraintTop_toTopOf="@id/btn_back" />


    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_back"
        android:padding="@dimen/_3sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/_8sdp"
        />


    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="@string/patient_name"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        />

    <TextView
        android:id="@+id/text_patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        tools:text= "Ahmed Ali"
        app:layout_constraintBottom_toBottomOf="@+id/patient_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/patient_name" />



    <TextView
        android:id="@+id/patient_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="@string/patient_age"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_name"
        />

    <TextView
        android:id="@+id/text_patient_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        tools:text= "43"
        app:layout_constraintBottom_toBottomOf="@+id/patient_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/patient_age" />


    <TextView
        android:id="@+id/patient_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="@string/patient_phone"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_age"
        />

    <TextView
        android:id="@+id/text_patient_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        tools:text= "012123213"
        app:layout_constraintBottom_toBottomOf="@+id/patient_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/patient_phone" />



    <TextView
        android:id="@+id/patient_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="@string/patient_date"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_phone"
        />

    <TextView
        android:id="@+id/text_patient_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        tools:text= "21-2-2222"
        app:layout_constraintBottom_toBottomOf="@+id/patient_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/patient_date" />


    <TextView
        android:id="@+id/patient_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="@string/patient_status"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_date"
        />

    <ImageView
        android:id="@+id/image_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_delay"
        android:layout_marginEnd="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/patient_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/patient_status" />



    <TextView
        android:id="@+id/text_patient_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        tools:text= "Process"
        app:layout_constraintBottom_toBottomOf="@+id/patient_status"
        app:layout_constraintEnd_toStartOf="@id/image_condition"
        app:layout_constraintTop_toTopOf="@+id/patient_status" />



    <TextView
        android:id="@+id/patient_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="@string/case_description"
        android:fontFamily="@font/cairo_bold"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patient_status"
        />

    <TextView
        android:id="@+id/text_patient_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:fontFamily="@font/cairo_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patient_description"
        tools:text="Ahmed Ali dkasjhdkjahs  badshdkjasbjd" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/cairo_bold"
        android:paddingVertical="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/logout"
        android:visibility="gone"
        android:backgroundTint="@color/red"
        android:textAllCaps="false"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>