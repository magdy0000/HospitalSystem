<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.magdy.hospitalsystem.ui.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash"
        >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/app_nav"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_splashFragment_to_hrHomeFragment"
            app:destination="@id/hrHomeFragment"
            app:popUpTo="@+id/app_nav"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"

            />
        <action
            android:id="@+id/action_splashFragment_to_receptionHomeFragment"
            app:destination="@id/receptionHomeFragment"
            app:popUpTo="@+id/app_nav"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.magdy.hospitalsystem.ui.auth.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/login_fragment"
        >
        <action
            android:id="@+id/action_loginFragment_to_receptionHomeFragment"
            app:destination="@id/receptionHomeFragment"
            app:popUpTo="@+id/app_nav"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_loginFragment_to_hrHomeFragment"
            app:destination="@id/hrHomeFragment"
            app:popUpTo="@+id/app_nav"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/receptionHomeFragment"
        android:name="com.magdy.hospitalsystem.ui.reception.ReceptionHomeFragment"
        android:label="ReceptionHomeFragment"
        tools:layout="@layout/fragment_reception_home"
        >
        <action
            android:id="@+id/action_receptionHomeFragment_to_receptionCallsFragment"
            app:destination="@id/receptionCallsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_receptionHomeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/hrHomeFragment"
        android:name="com.magdy.hospitalsystem.ui.hr.HrHomeFragment"
        android:label="HrHomeFragment"
        tools:layout="@layout/fragment_home_hr"
        >
        <action
            android:id="@+id/action_hrHomeFragment_to_employeeFragment"
            app:destination="@id/employeeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_hrHomeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/employeeFragment"
        android:name="com.magdy.hospitalsystem.ui.hr.EmployeeFragment"
        android:label="EmployeeFragment"
        tools:layout="@layout/fragment_employee">
        <action
            android:id="@+id/action_employeeFragment_to_registerNewEmployeeFragment"
            app:destination="@id/registerNewEmployeeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_employeeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/registerNewEmployeeFragment"
        android:name="com.magdy.hospitalsystem.ui.hr.RegisterNewEmployeeFragment"
        android:label="RegisterNewEmployeeFragment"
        tools:layout="@layout/fragment_register_new_employee"/>
    <fragment
        android:id="@+id/receptionCallsFragment"
        android:name="com.magdy.hospitalsystem.ui.reception.ReceptionCallsFragment"
        android:label="ReceptionCallsFragment"
        tools:layout="@layout/fragment_reception_calls"
        >
        <action
            android:id="@+id/action_receptionCallsFragment_to_createCallFragment"
            app:destination="@id/createCallFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/createCallFragment"
        android:name="com.magdy.hospitalsystem.ui.reception.CreateCallFragment"
        android:label="CreateCallFragment"
        tools:layout="@layout/fragment_create_call"
        >
        <action
            android:id="@+id/action_createCallFragment_to_selectDoctorForCallsFragment"
            app:destination="@id/selectDoctorForCallsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.magdy.hospitalsystem.ui.common.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"
        >
        <argument
            android:name="isMine"
            app:argType="boolean" />
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/app_nav"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
    </fragment>
    <fragment
        android:id="@+id/selectDoctorForCallsFragment"
        android:name="com.magdy.hospitalsystem.ui.reception.SelectDoctorForCallsFragment"
        android:label="SelectDoctorForCallsFragment"
        tools:layout="@layout/fragment_select_doctor_for_calls"
        />
</navigation>